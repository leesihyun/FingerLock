<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="사용할 터치탭 개수를 선택하세요"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/touch_tab_num"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:entries="@array/touch_tab_num" />

        <Button
            android:id="@+id/preview"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/touch_tab_shape"
            android:text="미리보기"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="바로가기 설정할 어플을 선택하세요"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/application_select"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="어플 선택하기"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/touch_tab_shape"/>

        <Button
            android:id="@+id/application_init"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="어플 선택 초기화"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/touch_tab_shape"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="터치탭 비밀번호를 설정합니다"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp" />

    <Button
        android:id="@+id/set_password"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="비밀번호 설정"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/touch_tab_shape"/>


    <Button
        android:id="@+id/setting_complete"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="right"
        android:text="완료"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/touch_tab_shape"/>

</LinearLayout>