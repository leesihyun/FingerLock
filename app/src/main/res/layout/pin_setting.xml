<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seahyun.fingerlock.PinSettingActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="바로가기 설정할 어플을 선택하세요"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/application_select"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="어플 선택하기"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/touch_tab_shape"/>

        <Button
            android:id="@+id/application_init"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="어플 선택 초기화"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/touch_tab_shape"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text = "바로가기 어플 설정 결과"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:id="@+id/image1"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/app_name1"
                android:textColor="@color/DarkBlue"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:id="@+id/image2"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/app_name2"
                android:textColor="@color/DarkBlue"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:id="@+id/image3"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/app_name3"
                android:textColor="@color/DarkBlue"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:id="@+id/image4"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/app_name4"
                android:textColor="@color/DarkBlue"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:id="@+id/image5"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/app_name5"
                android:textColor="@color/DarkBlue"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:id="@+id/image6"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/app_name6"
                android:textColor="@color/DarkBlue"
                android:textSize="13dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="터치탭 비밀번호를 설정합니다"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp" />


    <Button
        android:id="@+id/set_password"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="비밀번호 설정"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/touch_tab_shape"/>
    <Button
        android:id="@+id/setting_complete"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="right"
        android:text="완료"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/touch_tab_shape"/>


</LinearLayout>
